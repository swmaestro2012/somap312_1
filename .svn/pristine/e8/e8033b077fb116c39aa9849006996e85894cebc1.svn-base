@CHARSET "UTF-8";


.book-list{
	padding:10px 10px 10px 10px;
	list-style:none;
}

.book-list li {
	border:1px solid gray;
	border-radius:5px;
	box-shadow: 0px 3px 5px rgba(0,0,0,0.3);
	margin-bottom: 10px;
	background-color: white;
	padding: 5px;
	min-height: 150px;
}

.book-list a {
	display:block;
	color: black;
	margin-bottom: 3px;
}

.book-list img {
	width: 120px;
	height: 150px;
	float: left;
}

.book-item-info {
	padding-left: 130px;
	min-height: 150px;
}

.book-item-title {
	font-size: 15pt;
	font-weight: bold;
}

.book-item-genre {
	font-size: 12pt;
	
}
.book-item-nickname {
	font-size: 14pt;
	font-weight: bolder;
	color: #333377;
}

.branch-list{
	padding:10px 10px 10px 10px;
	list-style:none;
}

.branch-list li {
	border:1px solid gray;
	border-radius:5px;
	box-shadow: 0px 3px 5px rgba(0,0,0,0.3);
	margin-bottom: 10px;
	background-color: white;
	padding: 5px;
	min-height: 150px;
}
.branch-info {
	padding-left: 130px;
	min-height: 150px;
}


.branch-list a {
	display:block;
	color: black;
	margin-bottom: 3px;
}

.branch-title {
	font-size: 15pt;
	font-weight: bold;
}


.cover-img {
	width: 120px;
	height: 150px;
	float: left;
}

.content header {
	width:100%;
	margin-top : 0;
	display : block;
}

.content header a {
	display : inline-block;
	text-align:center;
	font-size: 13pt;
	padding:10px 0px 10px 0px;
	width:50%;
	cursor : pointer;	
}
#lib-active {
	background-color : rgba(0,0,0,0.2);
	color: white;
	font-weight: bold;
	text-shadow: 1px 1px 2px rgba(0,0,0,0.6);
}
#lib-deactive {
	background-color : rgba(0,0,0,0.5);
	color : #aaa;
	text-shadow : none;
}
#a_more_view {
	display : block;
	text-align : center;
	background-color : #cfcfcf;
	line-height : 60px;
	background-image : url(/static/images/icons/more.png);
	background-repeat : no-repeat;
	background-position : 50% 50%;
	cursor : pointer;
}

.info {
	display:inline;
}
.info-like {
	background-image : url(/static/images/icons/like@2x.png);
	background-size : 16px 16px;
	background-position : 0 50%;
	background-repeat : no-repeat;
	font-size : 15px;
	padding-left : 20px;
}
.info-user {
	color : #337;
}
.info-icon {
	background-repeat : no-repeat!important;
	background-position : 0 50%;
	background-size : 16px 16px;
	padding-left : 20px;	
}
.info-book-icon {	background-image: url(/static/images/icons/book-small.png);}

.info-timestamp {
	color : #888;
	font-size : .8em;
}