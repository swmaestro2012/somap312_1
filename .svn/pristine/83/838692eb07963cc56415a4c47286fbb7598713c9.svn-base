@CHARSET "UTF-8";

.branch-write-form{
	margin:10px 10px 10px 10px;
	text-align:center;
}
#id_title {
	width:95%;
	font-size: 14pt;
	border: 1px solid #a1a1a1;
	padding:5px 0px 5px 0px;
	box-shadow:3px 3px 5px rgba(0, 0, 0 ,0.5);
	border-radius:5px;
	margin-bottom:10px;
}

#id_contents {
	display : none;
}

#id_fake_contents {
	width:95%;
	height:350px;
	font-size: 13pt;
	border: 1px solid #a1a1a1;
	box-shadow:3px 3px 5px rgba(0, 0, 0 ,0.5);
	border-radius:5px;
	margin-bottom:10px;	
}

#id_is_temporary{
	
}

.branch-write-form input[type='button'], button{
	width:47.5%;
	height: 50px;
	border:1px solid #aaa;
	box-shadow : 2px 2px 5px rgba(0,0,0,.5);
	background-color : #fcfcfc;
	border-radius:5px;
	margin-bottom : 10px;
}

.attach-pic{
	padding-left : 24px;
	background-image : url(/static/images/icons/picture.png);
	background-size : 18px 18px;
	background-position: 0 50%;
	background-repeat: no-repeat;
}

.attach-mov{
	padding-left : 24px;
	background-image : url(/static/images/icons/movie.png);
	background-size : 18px 18px;
	background-position: 0 50%;
	background-repeat: no-repeat;
}

.dialog-back {
	position: fixed;
	display:none;
	width:100%;
	height:100%;
	top :0; left:0;
	z-index : 9999999;
	background-color : rgba(0,0,0,0.5);
}
.dialog-back button {
	width : 45%;
}

.attach-dialog {
	position:fixed;
	width: 80%;
	top : 30%;
	left : 10%;
	background-color : white;
	border : 3px solid #bbb;
	border-radius: 10px;
	box-shadow : 3px 3px 10px rgba(255,255,255,0.5);
	padding : 10px;
	text-align:center;
	display:none;
}

.attach-dialog header {
	text-align: left;
}

.dialog-back input {
	width: 98%;
	height : 40px;
	border : 1px solid #aaa;
}