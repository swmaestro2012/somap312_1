@CHARSET "UTF-8";

a {
	font-size:9pt;
	color:black;
}


#book-cover {
	width:120px;
	height:150px;
	float:left;
	margin:10px;
}

#book-title {
	font-size: 15pt;
	font-weight: bolder;
}

#book-info {
	margin-top : 10px;
	padding-left : 130px;
}

#book-indexes {
	margin: 10px;
}

#book-indexes ul{
	list-style:none;
	padding:0;
}

#book-indexes li {
	background-color : white;
	margin:0px 0px 10px 0px;
	border-left:2px solid #86B404;
	padding: 3px 5px 5px 7px;
}
#book-indexes .branch-title {
	font-size: 11pt;
	font-weight: bold;
}
#book-indexes a {
	margin-right:10px;
}

#book-indexes header {
	text-align:center;
	font-size:14pt;
	font-weight:bold;
	color:white;
	background-color:rgba(0, 0, 0, 0.4);
	padding:5px 0 5px 0;
	margin-bottom: 10px;
}

#comments{
	list-style: none;
	padding:0;
}

#comments li {
	background-color: white;
	border:1px solid #dedede;
	box-shadow: 3px 3px 5px gray;
	border-radius:5px;
	margin:0px 10px 10px 10px;
	padding: 5px;
	min-height:53px;
}

.small-profile{
	width:50px;
	height:50px;
	float:left;
}

#cmt-container{
	/*float:left;*/
	padding-left:60px;
	
}

.cmt-nickname {
	font-size : 10pt;
	font-weight: bolder;
	color : #333377;
}

.divider {
	border: none;
	border-top: 1px solid #3f3f3f;
	margin-bottom: 5px;
}

#toggle-book-info{
	width : 100%;
	height : 30px;
}

#cmt-post-form {
	margin:10px;
}
#id_text {
	width:70%;
	height:100px;
	margin-right:5px;
	float:left;
}

#cmt-submit {
	width:28.5%;
	height:100px;
	border-radius:4px;
	box-shadow: 3px 3px 5px rgba(0,0,0,0.2);
}

.right-align {
	text-align: right;
}