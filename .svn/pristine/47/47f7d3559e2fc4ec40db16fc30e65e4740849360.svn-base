{% for book in book_list %}
	<li class="book-list-item">
		<a href = "/posts/get_bookinfo/{{ book.id }}">
			<img src="{{ book.get_coverimg }}"></a>
			<div class="book-item-info">
				<a href="/posts/get_bookinfo/{{ book.id }}" class="book-item-title">{{ book.title }}</a>
				<a href="#" class="book-item-genre">{{ book.get_genre_display }}</a>
				유저 레벨 : {{ book.creator.get_profile.points }} <a href="#" class="book-item-nickname">{{ book.creator.get_nickname }}</a>
				<p class="info info-like">{{ book.like_count }}</p>
			</div>	
	</li>
{% endfor %}

<input type="hidden" id="book_page" value="{{ page }}" />
<input type="hidden" id="is_lastpage" value="{{ is_lastpage }}" />
<input type="hidden" id="book_type" value="{{ type }}" />