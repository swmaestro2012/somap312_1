@CHARSET "UTF-8";

/* a {
	font-size:9pt;
	color:black;
} */


#book-cover {
	width:120px;
	height:150px;
	float:left;
	margin:10px;
}

#book-title {
	font-size: 15pt;
	font-weight: bolder;
}

#book-info {
	margin-top : 10px;
	padding-left : 130px;
}

#book-info span{
	font-weight: bolder;
}

#book-indexes {
	margin: 10px;
}

#book-indexes ul{
	list-style:none;
	padding:0;
}

#book-indexes li {
	background-color : white;
	margin:0px 0px 10px 0px;
	border-left:2px solid #86B404;
	padding: 3px 5px 5px 7px;
}
#book-indexes .branch-title {
	font-size: 11pt;
	font-weight: bold;
}
#book-indexes a {
	margin-right:10px;
}

#book-indexes header {
	text-align:center;
	font-size:14pt;
	font-weight:bold;
	color:white;
	background-color:rgba(0, 0, 0, 0.4);
	padding:5px 0 5px 0;
	margin-bottom: 10px;
}

#comments{
	list-style: none;
	padding:0;
}

#comments li {
	background-color: white;
	border:1px solid #dedede;
	box-shadow: 3px 3px 5px gray;
	border-radius:5px;
	margin:0px 10px 10px 10px;
	padding: 5px;
	min-height:53px;
}

.small-profile{
	width:50px;
	height:50px;
	float:left;
}

#cmt-container{
	/*float:left;*/
	padding-left:60px;
	
}

.cmt-nickname {
	font-size : 10pt;
	font-weight: bolder;
	color : #333377;
}

.divider {
	border: none;
	border-top: 1px solid #3f3f3f;
	margin-bottom: 5px;
}

#toggle-book-info{
	width : 100%;
	height : 30px;
}

#cmt-post-form {
	margin:10px;
}
#id_text {
	width:70%;
	height:100px;
	margin-right:5px;
	float:left;
}

#cmt-submit {
	width:28.5%;
	height:100px;
	border-radius:4px;
	box-shadow: 3px 3px 5px rgba(0,0,0,0.2);
}

.right-align {
	text-align: right;
}

#container {
	margin:5px;
	position:relative;
	width:100%;
	height:480px;
	background-color : white;
}
.notify-container {
	background-color : rgba(0, 0, 0, 0.6);
	width:100%;
	height:100%;
	top:0px;
	left:0px;
	position:absolute;
	display:none;
}

.notify{
	position:absolute;
	top : 15%;
	bottom: 0;
	left:0;
	right:0;
	margin:auto;
	text-align:center;
	padding:0 20px 0 20px;
	
}

.notify p {
	text-align:center;
	font-size : 22px;
	color : #CDFF8B;
	font-weight: bolder;
	margin-top:15px;
	margin-bottom:10px;
}

.notify a {
	color :white;
	font-size:22px;
	font-weight:bold;
	background-image : url(/static/images/pen-write-white.png); 
	background-size : 24px 24px;
	background-repeat:no-repeat;
	background-position: 0 50%;
	padding-left:25px;
}

.dialog-container {
	background-color :rgba(0, 0, 0, 0.6);
	width:100%;
	height:100%;
	top:0px;
	left:0px;
	position:fixed;
	display:none;
}
.dialog {
	z-index: 100;
	background-color: white;
	border:4px solid black;
	border-radius : 10px;
	left:5%;
	top:15%;
	width:90%;
	height: 70%;
	position:absolute;
	box-shadow: 0px 7px 25px rgba(255,255,255,0.4);

}
.button-close-dialog {
	z-index:101;
	background-image : url(/static/images/close32x32.png);
	right:5%;
	top : 15%;
	margin-left : 6px;
	margin-top : 9px;
	width:32px;
	height:32px;
	position:absolute;
}

#dialog-iframe {
	position:relative;
	width: 100%;
	height:100%;
	margin: 0;
	padding:0;
}